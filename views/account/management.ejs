<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<%# Display flash messages %>
<%- messages() %>

<div class="account-management-container">
  <% if (locals.loggedin && locals.accountData) { %>
    <!-- Welcome message for all logged-in users -->
    <h2>Welcome <%= locals.accountData.account_firstname || 'User' %></h2>
    
    <!-- Update account information link for all users -->
    <p><a href="/account/update/<%= locals.accountData.account_id %>" title="Update Account Information">Update Account Information</a></p>
    
    <!-- Conditional content based on account type -->
    <% if (locals.accountData.account_type === 'Employee' || locals.accountData.account_type === 'Admin') { %>
      <h3>Inventory Management</h3>
      <p><a href="/inv/" title="Manage Inventory">Manage Inventory</a></p>
    <% } %>
  <% } else { %>
    <!-- Redirect to login if not logged in -->
    <% res.redirect('/account/login') %>
  <% } %>
</div>