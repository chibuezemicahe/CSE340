<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<%# Display flash messages %>
<%- messages() %>

<%# Display errors if any %>
<% if (errors) { %>
  <div class="error-messages">
    <ul>
      <% errors.array().forEach(error => { %>
        <li><%= error.msg %></li>
      <% }) %>
    </ul>
  </div>
<% } %>

<div class="login-container">
  <h2>Please Login</h2>
  
  <form id="loginForm" action="/account/login" method="post">
    <fieldset>
      <legend>Login Information</legend>
      
      <label for="account_email">Email Address:</label>
      <input type="email" id="account_email" name="account_email" 
             value="<%= locals.account_email || '' %>" 
             required maxlength="255">
      
      <label for="account_password">Password:</label>
      <input type="password" id="account_password" name="account_password" 
             required>
      
      <input type="submit" value="Login" class="btn btn-primary">
    </fieldset>
  </form>
  
  <p><a href="/">Return to Home</a></p>
</div>

<!-- Add this at the bottom of your existing login form -->
<p>Don't have an account? <a href="/account/register">Sign up here</a></p>