<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<%# Display flash messages %>
<%- messages() %>

<div class="management-container">
  <h2>Inventory Management</h2>
  <p>Welcome to the inventory management system. Use the links below to manage vehicle classifications and inventory items.</p>
  
  <div class="management-links">
    <div class="management-section">
      <h3>Classification Management</h3>
      <p>Add new vehicle classifications to organize your inventory.</p>
      <a href="/inv/add-classification" class="management-btn">Add New Classification</a>
    </div>
    
    <div class="management-section">
      <h3>Inventory Management</h3>
      <p>Add new vehicles to your inventory.</p>
      <a href="/inv/add-inventory" class="management-btn">Add New Vehicle</a>
    </div>
  </div>
  
  <!-- NEW CONTENT BELOW -->
  <h2>Manage Inventory</h2>
  <p>Select a classification from the list to see the items belonging to the classification.</p>
  
  <%- classificationSelect %>
  
  <table id="inventoryDisplay"></table>
  
  <noscript>JavaScript must be enabled to use this page.</noscript>
</div>

<script src="../../js/inventory.js"></script>